  <!DOCTYPE html>
<html>
  <head>
    <title>StokTakip</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">

    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/fomantic-ui/2.8.4/semantic.min.css">
    <%= stylesheet_link_tag 'menu' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fomantic-ui/2.8.4/semantic.min.js"></script>

  </head>

  <body>
    <% flash.each do |key, value| %>
      <script>
        $('body')
          .toast({
            class: '<%= key %>',
            showIcon: false,
            message: '<%= value %>'
          })
        ;
      </script>
    <% end %>
    <div class="site-wrap">
      <nav class="site-nav">
        <div class="name">
          <%= current_user.name + " " + current_user.surname %>
        </div>
        <ul>
          <li class="<%='active' if params[:controller] == 'dashboard'%>">
            <%= link_to root_path do %>
              <i class="home icon"></i>
              Anasayfa
            <%end%>
          </li>
          <li class="<%='active' if params[:controller] == 'storage'%>">
            <%= link_to storage_index_path do %>
              <i class="clipboard list icon"></i>
              Depolar
            <%end%>
          </li>
          <li class="<%='active' if params[:controller] == ''%>">
            <%= link_to root_path do %>
              <i class="users icon"></i>
              Kullanıcılar
            <%end%>
          </li>
          <li class"<%='active' if params[:controller] == ''%>">
            <%= link_to root_path do %>
              <i class="file alternate icon"></i>
              Raporlar
            <%end%>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="sign out alternate icon"></i>
              Çıkış Yap
            <% end %>
          </li>
        </ul>
      </nav>
      <%= yield %>
    </div>
  </body>
</html>
